# This PKGBUILD is not a full PKGBUILD
# pkgname, pkgver, source, and sha1sums are to be generated
pkgdesc='Get rounded result of an integer division'
pkgrel=1
arch=(x86_64)
license=(MIT)
url='https://github.com/KSXGitHub/rounded-div'
provides=(rounded-div)
conflicts=(rounded-div)
sha1sums=(
  "$_checksum"                  # for the rounded-div binary
  "${_completion_checksums[@]}" # for the completion files
  SKIP                          # for the readme file
  SKIP                          # for the license file
)

package() {
  install -Dm755 "rounded-div-$_checksum" "$pkgdir/usr/bin/rounded-div"
  install -Dm644 README.md "$pkgdir/usr/share/doc/$pkgname/README.md"
  install -Dm644 LICENSE.md "$pkgdir/usr/share/licenses/$pkgname/LICENSE.md"
  install -Dm644 "completion.$pkgver.bash" "$pkgdir/usr/share/bash-completion/completions/rounded-div"
  install -Dm644 "completion.$pkgver.fish" "$pkgdir/usr/share/fish/completions/rounded-div.fish"
  install -Dm644 "completion.$pkgver.zsh" "$pkgdir/usr/share/zsh/site-functions/_rounded-div"
}
