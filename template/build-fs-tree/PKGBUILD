# This PKGBUILD is not a full PKGBUILD
# pkgname, pkgver, source, and sha1sums are to be generated
pkgdesc='Get rounded result of an integer division'
pkgrel=1
arch=(x86_64)
license=(MIT)
url='https://github.com/KSXGitHub/rounded-div'
makedepends=(cargo)

build() {
  cd "$srcdir/rounded-div-$pkgver"
  cargo build --release --locked --bin rounded-div
}

package() {
  cd "$srcdir/rounded-div-$pkgver"
  install -Dm755 target/release/rounded-div "$pkgdir/usr/bin/rounded-div"
  install -Dm644 README.md "$pkgdir/usr/share/doc/$pkgname/README.md"
  install -Dm644 LICENSE.md "$pkgdir/usr/share/licenses/$pkgname/LICENSE.md"
  install -Dm644 exports/completion.bash "$pkgdir/usr/share/bash-completion/completions/rounded-div"
  install -Dm644 exports/completion.fish "$pkgdir/usr/share/fish/completions/rounded-div.fish"
  install -Dm644 exports/completion.zsh "$pkgdir/usr/share/zsh/site-functions/_rounded-div"
}
